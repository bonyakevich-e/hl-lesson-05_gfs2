1  lsblk
    2  systemctl enable --now pcsd
    3  pcs host auth mycluster1 mycluster2 mycluster3
    4  pcs cluster setup mycluster mycluster1 mycluster2 mycluster3 --force
    5  pcs cluster start --all
    6  pcs cluster enable --all
    7  pcs cluster status
    8  mkdir /etc/watchdog.d/
    9  cp /usr/share/cluster/fence_scsi_check /etc/watchdog.d/
   10  systemctl enable --now watchdog
   11  ll /dev/disk/by-id | grep sda | grep wwn
   12  pcs stonith create scsi-shooter fence_scsi pcmk_host_list="mycluster1 mycluster2 mycluster3" devices=/dev/disk/by-id/wwn-0x6001405cc19cb41e95b415ea7830de20 meta provides=unfencing
   13  pcs stonith config scsi-shooter
   14  pcs status
   15  vi /etc/lvm/lvm.conf
   16  pcs property set no-quorum-policy=freeze
   17  pcs resource create dlm ocf:pacemaker:controld op monitor interval=30s on-fail=fence group locking --future
   18  pcs resource clone locking interleave=true
   19  pcs resource create lvmlockdd ocf:heartbeat:lvmlockd op monitor interval=30s on-fail=fence group locking --future
   20  pcs status --full
   21  pvcreate /dev/sda
   22  vgcreate --shared vg01 /dev/sda
   23  lvcreate -l 100%FREE -n lv01 vg01
   24  mkfs.gfs2 -j3 -p lock_dlm -t mycluster:gfs01 /dev/vg01/lv01
   25  pcs resource create shared_lv ocf:heartbeat:LVM-activate lvname=lv01 vgname=vg01 activation_mode=shared vg_access_mode=lvmlockd group shared_vg --future
   26  pcs resource clone shared_vg interleave=true
   27  pcs constraint order start locking-clone then shared_vg-clone
   28  pcs constraint colocation add shared_vg-clone with locking-clone
   29  pcs resource create shared_fs ocf:heartbeat:Filesystem device="/dev/vg01/lv01" directory="/mnt" fstype="gfs2" options=noatime op monitor interval=10s on-fail=fence group shared_vg --future
   30  pcs status --full
   31  df -hT
   32  touch /mnt/node01
   33  ll /mnt
   34  history
